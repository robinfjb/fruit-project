<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >
    
    <include
        android:id="@+id/title"
        layout="@layout/view_title_ewm"
        android:focusable="true" />
    
    <com.robin.fruitseller.view.ScanImageView
        android:layout_below="@id/title"
        android:layout_marginTop="30dp"
        android:id="@+id/image"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        />
    
    <TextView 
        android:id="@+id/txt_btn"
        android:layout_below="@id/image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:text="上传二维码"
        android:padding="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/green_txt"
        android:textSize="18sp"
        android:background="@drawable/green_boarder"
        />
    
    <TextView 
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="怎么获取二维码"
        android:textColor="@color/red_txt"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>
